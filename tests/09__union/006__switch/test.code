union Integer {
    i8
    i32
}

union Value {
    bool
    Integer
}

func main() -> i32 {
    let value: Value = Integer(42)

    loop {
        switch value {
            is bool {
                return 1
            }
            is Integer as integer {
                switch integer {
                    is i8 {
                        return 2
                    }
                    is i32 as integer_value {
                        if integer_value != 42 {
                            return 3
                        }
                        break
                    }
                    is nil {
                        return 4
                    }
                }
            }
            is nil {
                return 5
            }
        }

        return 6
    }

    return 0
}
